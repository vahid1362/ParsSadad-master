@model QtasHelpDesk.ViewModels.Content.FaqViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayOut.cshtml";
}
    <link href="~/Lib/Select2/css/select2.min.css" rel="stylesheet" />
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{

    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <div class="row">
                    <div class="text-left">
                        <button type="submit" name="save" class="btn btn-success"><i class="fa fa-save fa-lg"></i>ذخیره</button>
                        <a href="@Url.Action("List")" class="btn btn-default"><i class="fa fa-backward fa-lg"></i>بازگشت</a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    @Html.Partial("_CreateOrUpdate", Model)
                </div>

            </div>
        </div>


    </section>
}
@section scripts
{
    <script src="~/Lib/Select2/js/select2.js"></script>
    <script>


        $('#DropDown').select2({ dir: "rtl" });
    </script>

}

