@using Kendo.Mvc.UI
@model QtasHelpDesk.ViewModels.Content.FaqViewModel
<div class="box-body">

    @Html.HiddenFor(x => x.Id)
  
    <div class="row">
        <div class="col-md-12">

            <div class="form-group">
                @Html.Label("", "گروه ", new { @class = "control-label col-md-1" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.GroupId, Model.SelectListItems, new { @class = "form-control", Id = "DropDown" })

                </div>
            </div>
            <div class="form-group">

                @Html.LabelFor(model => model.Question, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Question, new { htmlAttributes = new { @class = "form-control date-textbox" } })
                    @Html.ValidationMessageFor(model => model.Question, "", new { @class = "text-danger" })
                </div>
            </div>
           <div class="form-group">
               @Html.LabelFor(model => model.Reply, htmlAttributes: new { @class = "control-label col-md-1" })
                <div class="col-md-6">
                    <textarea asp-for="Reply" rows="11" class="bg-info" 
                      style="width: 100%;  font-size: 14px; line-height: 18px; border: 1px none #dddddd; padding: 10px;"></textarea>
                    @Html.ValidationMessageFor(model => model.Reply, "", new { @class = "text-danger" })
                </div>
            </div>
           

        </div>
    </div>

</div>
<script>

</script>