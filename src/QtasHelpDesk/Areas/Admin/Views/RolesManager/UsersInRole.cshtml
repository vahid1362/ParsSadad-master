@using Microsoft.AspNetCore.Routing
@model PagedUsersListViewModel

@{

    var roleId = (string)this.Context.GetRouteValue("Id");
    var roleName = $"«{Model.Roles.First(x => x.Id.ToString() == roleId).Name}»";
    ViewData["Title"] = $"کاربران نقش {roleName}";
}
<section class="content">
    <div class="box box-info">
    <div class="box-header with-border">
        <div class="col-md-6">
            <h3 class="box-title">مدیریت نقش ها</h3>
        </div>
     </div>
    <div class="box-body">
        <div class="row">
            <div class="col-md-12">
                <div id="gridcontainer" class="mt-5">
                    <partial name="~/Areas/Admin/Views/UsersManager/_UsersList.cshtml" model="Model" />
                </div>
            </div>
        </div>
    </div>
    </div>
</section>
