@model RegisterUserViewModel
<div class="box-body">
    <div class="row">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input  asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="LastName" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input  asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Username" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input  asp-for="Username"  class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
                <span class="optional-label">(جهت لاگین)</span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Mobile" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input  asp-for="Mobile"  class="form-control" />
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Password" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input dir="ltr" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group ">
            <label asp-for="ConfirmPassword" class="control-label col-md-2"></label>
            <div class="col-md-5">
                <input dir="ltr" asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        
    </div>

</div>
