@model ChangePasswordViewModel
@{
    ViewData["Title"] = "ویرایش کلمه عبور";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="ChangePassword" asp-action="Index" method="post" class="form-horizontal">
    <section class="content-header">
        <div class="row">
            <div class="col-md-12">
                
            </div>
        </div>
    </section>
    <section class="content">
        <div class="box box-info">
            <div class="box-header with-border">
                <div class="col-md-12">
                    <h3 class="box-title">ویرایش کاربر</h3>
                </div>
                <div class="row">
                    <div class="text-left">
                        <button type="submit" class="btn btn-success"><i class="fa fa-save fa-lg"></i>ذخیره</button>

                        <a href="@Url.Action("Index","Employee")" class="btn btn-default"><i class="fa fa-backward fa-lg"></i>بازگشت</a>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2"></div>
                <div class="col-md-4 offset-4">

                    @*@if (Model.LastUserPasswordChangeDate.HasValue)
                        {
                            <div class="alert alert-warning">
                                <a href="#" class="close" data-dismiss="alert">×</a>
                                آخرین تاریخ تغییر کلمه‌ی عبور شما:
                                <strong>
                                    @Model.LastUserPasswordChangeDate.Value.ToFriendlyPersianDateTextify()
                                </strong>
                            </div>
                        }*@
                </div>
            </div>
            <div class="row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label col-lg-2 col-md-2 col-sm-3"></label>
                    <div class="col-lg-3 col-md-3 col-sm-8">
                        <input asp-for="OldPassword" class="form-control" />
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label col-lg-2 col-md-2 col-sm-3"></label>
                    <div class="col-lg-3 col-md-3 col-sm-8">
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label col-lg-2 col-md-2 col-sm-3"></label>
                    <div class="col-lg-3 col-md-3 col-sm-8">
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>


            </div>
        </div>

    </section>
</form>
