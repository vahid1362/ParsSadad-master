@section scripts
    {


    <script src=@Url.Content("~/Lib/signalr/signalr.min.js")></script>
    <script src="~/js/jquery.marquee.js"></script>
    <script src="~/js/JalaliDate.js"></script>
    <script src="~/js/kendo.web.js"></script>
    <script src="~/js/fa-IR.js"></script>
    <script src="~/js/kendo.calendarshamsi.js"></script>
    <script>
        $(function() {
            $("#calendar").kendoCalendarShamsi({
                culture : "fa-IR",
                weekNumber: true,
                footer: false
            });

            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.Action("GetNotice", "Employee"))",
                success: function (data) {

                    $("#Notice").html(data.Content);

                },
                error: function(xhr, ajaxOptions, thrownError) {
                }
            });

            $('#marquee').marquee({
                //If you wish to always animate using jQuery
                allowCss3Support: true,

                //works when allowCss3Support is set to true - for full list see http://www.w3.org/TR/2013/WD-css3-transitions-20131119/#transition-timing-function
                css3easing: 'linear',

                //requires jQuery easing plugin. Default is 'linear'
                easing: 'linear',

                //pause time before the next animation turn in milliseconds
                delayBeforeStart: 1000,
                //'left', 'right', 'up' or 'down'
                direction: 'left',

                //true or false - should the marquee be duplicated to show an effect of continues flow
                duplicated: false,

                //speed in milliseconds of the marquee in milliseconds
                duration:10000,

                //gap in pixels between the tickers
                gap: 20,

                //on cycle pause the marquee
                pauseOnCycle: false,

                //on hover pause the marquee - using jQuery plugin https://github.com/tobia/Pause
                pauseOnHover: false,

                //the marquee is visible initially positioned next to the border towards it will be moving
                startVisible: false
            });

            $.ajax({
                cache: false,
                type: "GET",
                url: "@(Url.Action("GetNotes", "Employee"))",
                success: function (data) {
                    //for (i = 0, len = data.Content.length, text = ""; i < len; i++) { 
                    //    text +=  data.Content[i] + "<br/>";
                    //}
                    $(".direct-chat-messages").append(data.Content);

                },
                error: function(xhr, ajaxOptions, thrownError) {
                }
            });

            $("#btnSave").click(function() {
              
                var content = $("#Content").val();
                var id = $("#Id").val();
                var postData = {
                    Content: content,
                    Id:id
                };

                $.ajax({
                    cache: false,
                    type: "POST",
                    url: "@Url.Action("AddorUpdateNote", "Employee")",
                    data: postData,
                    success: function (data) {
                        $(".direct-chat-messages").append("<br/>"+content);

                    },
                    error: function(xhr, ajaxOptions, thrownError) {

                        $('#addProductPicture').attr('disabled', false);
                    }
                });
            });

        });


        function OpenPayRollWindow() {
            window.open('/PayRoll/Payslip_Display', '_blank');
        }

        function OpenWarrantWindow() {
            window.open('/warrant/List', '_blank');
        }
    </script>
}

