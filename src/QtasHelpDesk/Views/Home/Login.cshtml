@model LoginViewModel
@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "ورود به تالار گفتگو";
}

<div class="container h-100">
    <div id="login" class="row  h-100 justify-content-center align-items-center">
        <div class="col-md-3">
        </div>
        <div class="col-md-5 col-sm-10">
            <div class="text-center">
                <img src="~/images/logo.png" />
            </div>
            <div class="card mt-5">

                <div class="card-header">
                    <h5 class="card-title">@ViewData["Title"]</h5>
                </div>

                <div class="card-body">
                    <form asp-controller="Home"
                          asp-action="Login"
                          asp-route-returnurl="@ViewData["ReturnUrl"]"
                          method="post"
                          autocomplete="off">

                        <partial name="_CustomValidationSummary" />
                        <div class="form-group row">
                            <label asp-for="Username" class="col-md-3  col-sm-5 col-xs-10 col-form-label text-md-left"></label>
                            <div class="col col-md-9 col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    </span>
                                    <input asp-for="Username" autocomplete="off" dir="ltr" class="form-control" />
                                </div>
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for="Password" class="col-md-3 col-sm-5  col-form-label text-md-left"></label>
                            <div class="col col-md-9 col-sm-12">
                                <div class="input-group">
                                    <span class="input-group-prepend">
                                        <span class="input-group-text"><i class="fas fa-asterisk"></i></span>
                                    </span>
                                    <input asp-for="Password" dir="ltr" class="form-control" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col col-md-3 col-sm-5 col-xs-10 col-form-label text-md-left">
                                کد امنیتی
                            </label>
                            <div class="col col-md-9 col-sm-12">
                                <dnt-captcha asp-captcha-generator-max="9000"
                                             asp-captcha-generator-min="1"
                                             asp-captcha-generator-language="Persian"
                                             asp-font-name="Tahoma"
                                             asp-font-size="18"
                                             asp-refresh-button-class="fas fa-redo btn-sm"
                                             asp-fore-color="#333333"
                                             asp-back-color="#ccc"
                                             asp-text-box-class="text-box form-control"
                                             asp-text-box-template="<div class='input-group'><span class='input-group-prepend'><span class='input-group-text'><i class='fas fa-lock'></i></span></span>{0}</div>"
                                             asp-validation-message-class="text-danger" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-3 col-md-9">
                                <div class="form-check">
                                    <label asp-for="RememberMe" class="form-check-label">
                                        <input class="form-check-input" asp-for="RememberMe" />
                                        @Html.DisplayNameFor(m => m.RememberMe)
                                    </label>
                                    <a asp-controller="Home"
                                       asp-action="NewPassword">فراموشی کلمه عبور</a>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="offset-md-3 col-md-10">
                                <button type="submit" class="btn btn-info col-md-10">ورود</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </div>

    </div>

    </div>
@section scripts
    {


}
