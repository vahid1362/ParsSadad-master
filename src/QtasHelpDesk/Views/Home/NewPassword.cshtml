@model NewPasswordViewModel
@{
    ViewData["Title"] = "تغییر کلمه عبور";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="alert alert-info">
          برای تغییر کلمه عبور شماره  تلفن همراه خود را وارد کنید.
        </div>
        <div class="card mt-5">
            <div class="card-header">
                <h5 class="card-title">@ViewData["Title"]</h5>

            </div>
            <div class="card-body">
                <form asp-controller="Home"
                      asp-action="NewPassword"
                      asp-route-returnurl="@ViewData["ReturnUrl"]"
                      method="post"
                      autocomplete="off">
                    <input asp-for="UserName"/>
                    <partial name="_CustomValidationSummary" />
                    <div class="form-group row">
                        <label asp-for="Mobile" class="col-md-2 col-form-label text-md-left"></label>
                        <div class="col col-md-10">
                            <div class="input-group">
                                <span class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-mobile"></i></span>
                                </span>
                                <input asp-for="Mobile" autocomplete="off" dir="ltr" class="form-control" />
                            </div>
                            <span asp-validation-for="Mobile" class="text-danger"></span>
                        </div>
                    </div>
                   
                    <div class="form-group row">
                        <label class="col col-md-2 col-form-label text-md-left">
                            کد امنیتی
                        </label>
                        <div class="col col-md-10">
                            <dnt-captcha asp-captcha-generator-max="9000"
                                         asp-captcha-generator-min="1"
                                         asp-captcha-generator-language="Persian"
                                         asp-font-name="Tahoma"
                                         asp-font-size="20"
                                         asp-refresh-button-class="fas fa-redo btn-sm"
                                         asp-fore-color="#333333"
                                         asp-back-color="#ccc"
                                         asp-text-box-class="text-box form-control"
                                         asp-text-box-template="<div class='input-group'><span class='input-group-prepend'><span class='input-group-text'><i class='fas fa-lock'></i></span></span>{0}</div>"
                                         asp-validation-message-class="text-danger" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="offset-md-2 col-md-10">
                            <button type="submit" class="btn btn-info col-md-2">ورود</button>
                            <a asp-controller="Home" asp-action="Login">بازگشت</a>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <div class="col-md-3">
    </div>
</div>

