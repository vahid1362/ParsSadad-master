@model QtasHelpDesk.ViewModels.Content.InformationViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .loader {
        width: 100%;
        height: 300px;
        background: url('/images/loading.gif') no-repeat center center rgba(0,0,0,0.25)
    }
   .carousel-control-next
   {
       background-image:linear-gradient(to right,rgba(0,0,0,0.0001) 0,rgba(0,0,0,0.5) 100%);
       background-repeat: repeat-x;
   }
    .carousel-control-prev
   {
       background-image:linear-gradient(to right,rgba(0,0,0,0.0001) 0,rgba(0,0,0,0.5) 100%);
       background-repeat: repeat-x;
   }
    .carousel-item{
     padding:   40px 150px 40px 150px;
     height:250px;
    }
    .carousel-indicators li{
        background-color:gray;
            width: 10px;
    height: 10px;
    border-radius: 100%;
    }
    .carousel-indicators  .active {
        background-color: blue;
    }
</style>

<div id="slider">
    <div class="loader"></div>

</div>
<br/>
<div id="Faqs">
    <div class="loader"></div>

</div>

<div id="Posts">
    <div class="loader"></div>
</div>

@section Scripts
{
    <script>
        $('.carousel').carousel({
  interval: 2000
})
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetSlider","post")',
            success: function(response) {
                $('#slider').html(response);
            }
        });
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetFaqs","Faq")',
            success: function(response) {
                $('#Faqs').html(response);
            }
        });
        $.ajax({
            type: 'GET',
            url: '@Url.Action("GetPosts","Post")',
            success: function(response) {
                $('#Posts').html(response);
            }
        });

 $("#btnFilter").click(function () {
     var article;
     var question;
     if ($('#chkArticle').is(":checked")) {
         article = true;
     }

      if ($('#chkQuestion').is(":checked")) {
         question = true;
     }
     var data = {
        ShowArticle:article,
        ShowQuestion:question
        } 
     $.ajax({
         type: 'POST',
         url: '@Url.Action("FilterContent","Post")',
         dataType: 'json',
         contentType: 'application/json; charset=utf-8',
         data: JSON.stringify(data),
         success: function (response) {
             alert("ok");
         }
     });
 })




    </script>



}


