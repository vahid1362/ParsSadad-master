@model IEnumerable<QtasHelpDesk.ViewModels.Content.PostViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var searchsUrl = Url.Action("Search",  "Post");
    var bulletImage = Url.Content("~/Images/bullet_shape.png");
}
<style>
    .ac_results
    {
        padding: 0;
        border: 1px solid black;
        background-color: black;	
        z-index: 99999;	

    }
    .ac_results ul
    {	
        list-style-position: outside;
        list-style: none;
        padding: 0;
        margin: 0;
        background:white;	
    }
    .ac_results li
    {
        margin: 0;
        padding: 2px 5px;
        cursor:pointer;
        display: block;
        direction: rtl;
        text-align: right;
        font: normal 11px Tahoma;
        line-height: 16px;	
    }
    .ac_loading
    {
        background: white url('/Images/indicator.gif') left center no-repeat;
    }
    .ac_odd
    {
        background-color: #1f717f;
    }
    .ac_over
    {
        background-color: #D1EAEF;
        color: #1F717F;
    }
    .ac_results
    {
        border-color: #a2bff0 !important;
        z-index: 10000;
        background-color: white;
    }
    .ac_odd
    {
        /*background-color: #fff !important;*/
    }
    .ac_over
    {
        background-color: #d5e2ff !important;
        color: #000 !important;
        cursor: pointer;
    }
</style>

@foreach (var postviewModel in Model)
{
    <div class="card" >
        <div class="card-header bg-info" style="">
            <h6 class="panel-title text-white" itemprop="headline_name">
                
                @postviewModel.Title
            </h6>
        </div>
        <div class="card-body"> @postviewModel.Summary</div>
       
    </div>
    <br/>
}

@section Scripts
{
    <script type="text/javascript">
       EnableSearchAutocomplete('@searchsUrl', '@bulletImage');
      </script>
}


