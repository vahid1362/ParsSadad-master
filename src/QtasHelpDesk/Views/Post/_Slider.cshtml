@model QtasHelpDesk.ViewModels.Content.InformationViewModel
@{
    ViewData["Title"] = "_Slider";

}

<div class="card">
    <div class="card-header">
        <h6 class="panel-title text-gray" itemprop="headline_name">
            آخرین مطالب
        </h6>
    </div>
    <div class="card-body" style="padding:0">
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">

                @foreach (var faqtModel in Model.FaqViewModels)
                {
                    if (faqtModel.Id == Model.PostViewModels.FirstOrDefault()?.Id)
                    {
                        <div class="carousel-item active" style="padding:40px 150px 40px 150px">
                            <h6 class="border-bottom">
                                <i class="fa fa-question-circle-o"></i>  @faqtModel.Question
                            </h6>
                            <span class="fa fa-user">@faqtModel.UserFullName</span>
                            <span class="fa fa-clock">@faqtModel.Date</span>
                            <p>
                                @faqtModel.Reply
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item " style="padding:40px 150px 40px 150px">
                            <h5 class="border-bottom">
                                <i class="fa fa-question-circle-o"></i>  @faqtModel.Question
                            </h5>
                            <span aria-hidden="true" class="fa fa-user">@faqtModel.UserFullName</span>
                            <span aria-hidden="true" class="imgleft fa fa-clock-o"></span>
                            <p>
                                @faqtModel.Reply
                            </p>
                        </div>
                    }

                }
                @foreach (var postModel in Model.PostViewModels)
                {
                    if (postModel.Id == Model.PostViewModels.FirstOrDefault()?.Id)
                    {
                        <div class="carousel-item active" style="padding:40px 150px 40px 150px">
                            <h6 class="border-bottom">
                                <i class="fa fa-info-circle"></i>  @postModel.Title
                            </h6>
                            <span class="fa fa-user">@postModel.UserFullName</span>
                            <span class="fa fa-clock">@postModel.Date</span>
                            <p>
                                @postModel.Summary
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item " style="padding:40px 150px 40px 150px">
                            <h5 class="border-bottom">
                                <i class="fa fa-info-circle"></i>  @postModel.Title
                            </h5>
                            <span aria-hidden="true" class="fa fa-user">@postModel.UserFullName</span>
                            <span aria-hidden="true" class="imgleft fa fa-clock-o"></span>
                            <p>
                                @postModel.Summary
                            </p>
                        </div>
                    }

                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
       
    </div>
</div>

