@model QtasHelpDesk.ViewModels.Content.InformationViewModel
@{
    ViewData["Title"] = "_Slider";
    int sliderNumber = 0;
}

<div class="card">
    <div class="card-header">
        <h6 class="panel-title text-gray" itemprop="headline_name">
            آخرین مطالب
        </h6>
    </div>
    <div class="card-body" style="padding:0">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
            <ol class="carousel-indicators">

                @foreach (var faqtModel in Model.FaqViewModels)
                {
                    if (faqtModel.Id == Model.PostViewModels.FirstOrDefault()?.Id)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@sliderNumber" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@sliderNumber"></li>
                    }

                    sliderNumber++;

                }

                @foreach (var postModel in Model.PostViewModels)
                {
                    <li data-target="#carouselExampleIndicators" data-slide-to="@sliderNumber"></li>
                    sliderNumber++;
                }

            </ol>
            <div class="carousel-inner">

                @foreach (var faqtModel in Model.FaqViewModels)
                {
                    if (faqtModel.Id == Model.PostViewModels.FirstOrDefault()?.Id)
                    {
                        <div class="carousel-item active">
                            <h6 class="border-bottom">
                                <a href="@Url.Action("ShowFaq","Faq",new {faqId=faqtModel.Id})" target="_blank">     <i class="fa fa-question-circle-o"></i>  @faqtModel.Question </a>
</h6>
                            <span class="fa fa-user">@faqtModel.UserFullName</span>
                            <span class="fa fa-clock">@faqtModel.Date</span>
                            <p>
                                @faqtModel.Reply
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item ">
                            <h6 class="border-bottom">
                                <a href="@Url.Action("ShowFaq","Faq",new {faqId=faqtModel.Id})" target="_blank">     <i class="fa fa-question-circle-o"></i>  @faqtModel.Question </a>
                            </h6>           <span aria-hidden="true" class="fa fa-user">@faqtModel.UserFullName</span>
                            <span aria-hidden="true" class="imgleft fa fa-clock-o"></span>
                            <p>
                                @faqtModel.Reply
                            </p>
                        </div>
                    }

                }
                @foreach (var postModel in Model.PostViewModels)
                {
                    if (postModel.Id == Model.PostViewModels.FirstOrDefault()?.Id)
                    {
                        <div class="carousel-item active">
                            <h6 class="border-bottom">
                                <a href="@Url.Action("ShowPost","Post",new {postId=postModel.Id})" target="_blank">     <i class="fa fa-question-circle-o"></i>  @postModel.Title </a>
                            </h6>
                            <span class="fa fa-user">@postModel.UserFullName</span>
                            <span class="fa fa-clock">@postModel.Date</span>
                            <p>
                                @postModel.Summary
                            </p>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item ">
                          
                                <h6 class="border-bottom">
                                    <a href="@Url.Action("ShowPost","Post",new {postId=postModel.Id})" target="_blank">     <i class="fa fa-question-circle-o"></i>  @postModel.Title </a>
                                </h6>
                          
                            <span aria-hidden="true" class="fa fa-user">@postModel.UserFullName</span>
                            <span aria-hidden="true" class="imgleft fa fa-clock-o"></span>
                            <p>
                                @postModel.Summary
                            </p>
                        </div>
                    }

                }

            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
       
    </div>
</div>

