@model IEnumerable<QtasHelpDesk.ViewModels.Content.GroupViewModel>

<div class="card ">
    <div class="card-header bg-info" style="max-height: 50px">
        <h5 class="card-title text-white">
            <span class="fa fa-archive " aria-hidden="true"></span>
          گروه ها
        </h5>
    </div>
    <div class="card-body">
        <ul id="accordion1" class="nav nav-pills flex-column">
        @foreach (var group in Model)
        {<li class="nav-item" >
                <a class="nav-link" data-toggle="collapse" href="#item-1" data-parent="#accordion1"><i class="fa  fa-folder-open"></i> @group.Title</a>
                <div id="item-1" class="collapse show">
                    <ul class="nav flex-column ml-3">
                        @foreach (var subgroup in group.SubGroups)
                        {
                            <li class="nav-item"  style="padding-right: 15px">
                                <a class="nav-link" href="@Url.Action("Index","Group",new{groupId=subgroup.Id})"><i class="fa  fa-folder-open"></i> @subgroup.Title</a>
                            </li>
                        }

                    </ul>
                </div>
            </li>
           
        }
        </ul>
    </div>
</div>

