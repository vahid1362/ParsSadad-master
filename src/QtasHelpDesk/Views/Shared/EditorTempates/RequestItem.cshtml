@model QtasHelpDesk.ViewModels.Product.RequestItemViewModel
       <div class="form-group">
            <label class="control-label col-md-2"> دسته کالا</label>
            <div class="col-md-5">
                @Html.DropDownListFor(model => model.Group_Digit_Code, Model.AvailabeProducts, new { @class = "form-control", Id = "ProductDropDown" })
            </div>
        </div>
        <div class="form-group">
                <label class="control-label col-md-2"> محل مصرف</label>
                <div class="col-md-5">
                    @Html.DropDownListFor(model => model.Use_Place, Model.AvailabeUsePlace, new { @class = "form-control", Id = "UsePlaceDropDown" })
                </div>
            </div>
        <div class="form-group">
                <label asp-for="Qty" class="control-label col-md-2"></label>
                <div class="col-md-2">
                    <input asp-for="Qty" class="form-control" />
                    <span asp-validation-for="Qty" class="text-danger"></span>
                </div>
            </div>
        <div class="form-group">
                <label asp-for="Note" class="control-label col-md-2"></label>
                <div class="col-md-4">
                    <textarea asp-for="Note" class="form-control"></textarea>
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
            </div>
<script src="~/Lib/Select2/js/select2.js"></script>
<script>
    $(function() {
        $('#ProductDropDown').select2({
            dir: "rtl",
            placeholder: "کالای مورد نظر را انتخاب کنید ",
            allowClear:true

        });
        $('#UsePlaceDropDown').select2({
            dir: "rtl",
            placeholder: "محل مورد مصرف را انتخاب  کنید ",
            allowClear:true
        });
    });

</script>